# Football Player Tracking - Environment Configuration
# Copy this file to .env and customize values

# Flask Settings
SECRET_KEY=your-secret-key-here-generate-with-python-secrets
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
MAX_UPLOAD_SIZE_MB=500

# YOLO Detection
YOLO_MODEL=yolo11l.pt
INFERENCE_SIZE=640
FRAME_SKIP=2
DETECTION_CONFIDENCE=0.5

# Tracking
MAX_PLAYERS=8
LOST_TRACK_TIMEOUT=35

# OCR Settings
HUNTING_OCR_INTERVAL=2
VERIFICATION_INTERVAL=50
LOCK_THRESHOLD=3
OCR_CONFIDENCE=0.5
OCR_DEBUG_SAVE=true

# Logging
LOG_LEVEL=INFO
# LOG_FILE=/path/to/logfile.log  # Uncomment to enable file logging

# Cleanup
UPLOAD_MAX_AGE_HOURS=24
AUTO_CLEANUP=true
